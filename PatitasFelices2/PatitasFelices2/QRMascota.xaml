<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PatitasFelices2.QRMascota">
    <ContentPage.Content>
        <StackLayout x:Name="stkQR">
            <Label Text="PATITAS FELICES APP"
               HorizontalOptions="CenterAndExpand"></Label>

            
            <Entry x:Name="txtValorQR" Placeholder="Introducir Mascota" IsVisible="false"></Entry>
            <Label Text="THOMAS" TextColor="Blue" FontSize="50"
               HorizontalOptions="CenterAndExpand"></Label>

            <Button x:Name="btnGenerarCodigo" Text="GENERAR QR" ></Button>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>